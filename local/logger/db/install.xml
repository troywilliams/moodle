<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="logger/db" VERSION="20070808" COMMENT="XMLDB file for Moodle uow/logger"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="uow_logger" COMMENT="UOW logger table" NEXT="uow_log_entries">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="name" />
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="type" />
        <FIELD NAME="type" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="name" NEXT="creationtime" />
        <FIELD NAME="creationtime" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="type" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for the logger"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="creationtime" UNIQUE="false" FIELDS="creationtime" />
      </INDEXES>
    </TABLE>
    <TABLE NAME="uow_log_entries" COMMENT="Entries to the logger" PREVIOUS="uow_logger" >
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="loggerid" />
        <FIELD NAME="loggerid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="level" />
        <FIELD NAME="level" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="loggerid" NEXT="message" />
        <FIELD NAME="message" TYPE="text" LENGTH="small" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="level" NEXT="creationtime" />
        <FIELD NAME="creationtime" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="message" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for the log entry" NEXT="loggerid" />
        <KEY NAME="loggerid" TYPE="foreign" FIELDS="loggerid" REFTABLE="uow_logger" REFFIELDS="id" PREVIOUS="primary"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="level" UNIQUE="false" FIELDS="level" />
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>

